<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <body>
        <referenceBlock name="page.main.title">
            <arguments>
                <argument name="title" xsi:type="string" translate="true">Mis Planes</argument>
            </arguments>
        </referenceBlock>

        <referenceContainer name="content">
            <block class="OY\Customer\Block\CustomerPlan\Index" name="customer.plan.index"
                   template="OY_Customer::customer_plan/index.phtml" cacheable="false"/>
        </referenceContainer>
    </body>
</page>

<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Gym_JsAuth::css/style.css"/>
    </head>
    <referenceBlock name="page.title">
        <action method="setPageTitle">
            <argument name="title" xsi:type="string">Control de acceso al local</argument>
        </action>
    </referenceBlock>
    <body>
        <referenceContainer name="page.main.actions" remove="true"/>
        <referenceContainer name="footer" remove="true"/>
        <referenceContainer name="page.menu" remove="true"/>
        <referenceContainer name="content">
            <block class="Gym\JsAuth\Block\Adminhtml\Auth" template="Gym_JsAuth::auth.phtml"/>
        </referenceContainer>
    </body>

</page>
